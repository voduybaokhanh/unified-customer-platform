        "url": {
          "raw": "{{base_url}}/api/customers",
          "host": ["{{base_url}}"],
          "path": ["api", "customers"]
        },
        "description": "Test validation: Tạo customer với email trùng lặp"
      },
      "response": []
    },
    {
